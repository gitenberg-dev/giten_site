packages:
  yum:
    git: []
    postgresql93: []
    postgresql93-devel.x86_64: []
    libffi.x86_64: []
    libffi-devel: []
    gcc: []
    libjpeg-turbo-devel: []

commands:
  10_create_log_dir:
    command: "mkdir -p /var/log/django"
  20_touch_log_file:
    command: "touch /var/log/django/django.log"
  30_chown_log_file:
    command: "chown wsgi:wsgi -R /var/log/django/ && chmod 666 /var/log/django/django.log"
  40_create_upload_dir:
    command: "mkdir -p /opt/python/bundle/2/app/upload"
  41_get_rdf: 
    command: "curl -O https://www.gutenberg.org/cache/epub/feeds/rdf-files.tar.zip"
    leader_only: true
    cwd: /etc
  42_unzip_rdf: 
    command: "unzip rdf-files.tar.zip"
    leader_only: true
    cwd: /etc
  43_untar_rdf: 
    command: "tar xf rdf-files.tar"
    leader_only: true
    cwd: /etc
  


container_commands:
  01_syncdb:
    command: "source /opt/python/run/venv/bin/activate && python manage.py syncdb --noinput"
    leader_only: true
  02_migratedb:
    command: "source /opt/python/run/venv/bin/activate && python manage.py migrate --noinput"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python manage.py collectstatic --noinput"
    leader_only: true
  04_load_repos:
    command: "source /opt/python/run/venv/bin/activate && python manage.py load_repos /etc/cache/epub"
    leader_only: true

option_settings:
     - namespace: aws:elasticbeanstalk:container:python
       option_name: WSGIPath
       value: gitensite/wsgi.py
